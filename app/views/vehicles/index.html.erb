<% if has_role?(:owner) or has_role?(:admin) %>
  <%= link_to "Add New Car", new_user_vehicle_path(current_user.id), class: "btn btn-primary btn-md" %>
  <hr>
<% end %>
<div class="row row-cols-1 row-cols-md-4 row-cols-sm-2 g-8">
  <% @vehicles.each do |vehicle| %>
    <%# if showvehicles(vehicle) %> 
      <div class="col">
        <div class="card h-100">
          <% if vehicle.car_avatar.attached? %>
          <image src="<%=(url_for(vehicle.car_avatar))%>">
            <% end %> 
          <div class="card-body">
            <h5 class="card-title"><%= vehicle.style %> | <%= vehicle.manufacturer %></h5>
            <p class="card-text">
              <%= vehicle.PlateNumber %> <br> <%= vehicle.city %> <br> <%= vehicle.state %>
            </p>
          </div>
          <b class="btn btn-primary btn-md float-right"><%= link_to vehicle.status, user_vehicle_path(current_user.id, vehicle.id), style:"color:white;" %></b>
        </div>
      </div>
    <%# end %>
  <% end %>
</div>


