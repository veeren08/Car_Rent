<center>
  <div id="formContent">
    <center>
      <%# <div style="width:250px;"> %>
      <h2>Car Details</h2> 
      <%#= current_user.id %> 
      <%#= current_user.vehicle. %> 
      <br>
      <table>
        <tr>
          <th>Model</th>
          <td><%= @vehicle.model %></td>      
        </tr>
        <tr>
          <th>license</th>
          <td><%= @vehicle.license %></td>
        </tr>
        <tr>
          <th>PlateNumber</th>
          <td><%= @vehicle.PlateNumber %></td>      
        </tr>
        <tr>
          <th>manufacturer</th>
          <td><%= @vehicle.manufacturer %></td>
        </tr>
        <tr>
          <th>style</th>
          <td><%= @vehicle.style %></td>
        </tr>
        <tr>
          <th>Status</th>
          <td><%= @vehicle.status %></td>
        </tr>
        <tr>
          <th>Hourly Rent Rate</th>
          <td><%= '$%.2f per hour' % @vehicle.hourlyRentalRate %></td>
        </tr>
        <tr>
          <th>City</th>
          <td><%= @vehicle.city %></td>
        </tr>
        <tr>
          <th>State</th>
          <td><%= @vehicle.state %></td>
        </tr>
        <tr>
          <th>Country</th>
          <td><%= @vehicle.country %></td>
        </tr>
        <tr>
          <th>Mobile</th>
          <td><%= @vehicle.mobile %></td>
        </tr>
      </table>
      <br>

      <% if has_role?(:admin) || has_role?(:owner)%>
        <%= link_to 'Edit', edit_vehicle_path(@vehicle), class:"btn btn-primary btn-md" %> 
        <%= link_to "Delete", @vehicle, method: :delete, data: { confirm: "Delete this vehicle?" }, class:"btn btn-danger btn-md" %> 
        <%= link_to 'Back', :back, class:"btn btn-info btn-md"%>
      
      <% else %>
        <%= link_to 'Reserve', edit_vehicle_path(@vehicle), class:"btn btn-success btn-md" %>&nbsp;&nbsp;
        <%= link_to 'Back', :back, class:"btn btn-info btn-md"%>
      <% end %>
      <br><br><br>
    </center>
  </div>
</center>

